@model List<Model.ViewModel.ProductViewModel>
@{
   @* var category = (Model.EF.ProductCategory)ViewBag.Category;*@
    ViewBag.Title ="Tìm kiếm";

    Layout = "~/Views/Shared/_Layout.cshtml";
}


<header id="fh5co-header" class="fh5co-cover fh5co-cover-sm" role="banner" style="background-image:url(/Assets/client/images/img_bg_1.jpg);">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center">
                <div class="display-t">
                    <div class="display-tc animate-box" data-animate-effect="fadeIn">
                        <h1>kết quả tìm kiếm theo từ khóa:@ViewBag.Keyword</h1>
                        <h2>Free html5 templates Made by <a href="http://freehtml5.co" target="_blank">freehtml5.co</a></h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<div id="fh5co-product">
    <div class="container">
       
        <div class="row">
            @if (Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    var url = "/detail/" + item.MetaTitle + "-" + item.ID;
                    <div class="col-md-4 text-center animate-box">
                        <div class="product">
                            <div class="product-grid" style="background-image:url(@item.Images);">
                                <div class="inner">
                                    <p>
                                        <a href="/them-gio-hang?productId=@item.ID&quantity=1" class="icon"><i class="icon-shopping-cart"></i></a>
                                        <a href="@url" class="icon"><i class="icon-eye"></i></a>
                                    </p>
                                </div>
                            </div>
                            <div class="desc">
                                <h3><a href="@url">@item.Name</a></h3>
                                <span>@item.CateName</span>
                                <span class="price">$@item.Price</span>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <span>Không có bản ghi nào</span>
            }
        </div>
    </div>



